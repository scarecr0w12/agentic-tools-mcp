{
  "name": "@scarecr0w12/agentic-tools-cloud",
  "version": "0.1.0",
  "description": "Multi-tenant SaaS platform for AI-powered task and memory management with team collaboration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "agentic-tools-cloud": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:sql",
    "copy:sql": "mkdir -p dist/db/migrations && cp src/db/migrations/*.sql dist/db/migrations/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "db:migrate": "node dist/db/migrate-runner.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "install:all": "npm install && cd dashboard/backend && npm install && cd ../frontend && npm install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "saas",
    "multi-tenant",
    "task-management",
    "agent-memories",
    "team-collaboration",
    "http-api",
    "websocket",
    "real-time",
    "mcp",
    "model-context-protocol",
    "productivity",
    "ai-tools",
    "sqlite",
    "redis"
  ],
  "author": "scarecr0w12",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.22.4",
    "fastify": "^5.1.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "better-sqlite3": "^11.7.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "ioredis": "^5.4.1",
    "socket.io": "^4.7.5",
    "stripe": "^17.3.1",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@vitest/ui": "^4.0.9",
    "typescript": "^5.0.0",
    "vitest": "^4.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scarecr0w12/agentic-tools-cloud.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
