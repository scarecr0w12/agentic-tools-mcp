# =============================================================================
# Agentic Tools Cloud - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# HTTP Server Configuration
# =============================================================================
HTTP_PORT=3000
HTTP_HOST=0.0.0.0
HTTP_CORS_ORIGINS=http://localhost:5173,http://localhost:4800
NODE_ENV=development

# =============================================================================
# Authentication & Security
# =============================================================================
# IMPORTANT: Generate a secure random secret for JWT signing
# Example: openssl rand -base64 64
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
AUTH_REQUIRED=true
BCRYPT_ROUNDS=12
CSRF_ENABLED=true

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///data/agentic-tools.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24h

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=agentic:
CACHE_TTL=300

# =============================================================================
# Rate Limiting (Requests per Hour by Plan)
# =============================================================================
RATE_LIMIT_FREE=100
RATE_LIMIT_PRO=1000
RATE_LIMIT_TEAM=5000
RATE_LIMIT_ENTERPRISE=0

# =============================================================================
# Usage Limits by Plan
# =============================================================================
LIMIT_FREE_WORKSPACES=1
LIMIT_FREE_TASKS=100
LIMIT_FREE_MEMORIES=50
LIMIT_PRO_WORKSPACES=10
LIMIT_PRO_TASKS=0
LIMIT_PRO_MEMORIES=0
LIMIT_TEAM_WORKSPACES=50

# =============================================================================
# Stripe Billing Integration (Optional)
# =============================================================================
BILLING_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM=noreply@agentic-tools.cloud
EMAIL_FROM_NAME=Agentic Tools
EMAIL_VERIFICATION_REQUIRED=false

# =============================================================================
# WebSocket Configuration
# =============================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=20000

# =============================================================================
# Monitoring & Observability
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info
SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_BILLING=false
FEATURE_TEAM_COLLABORATION=true
FEATURE_USAGE_LIMITS=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_AUDIT_LOGS=true

# =============================================================================
# Backward Compatibility (Optional)
# =============================================================================
STDIO_MODE_ENABLED=true
STDIO_USE_JSON_FILES=false
